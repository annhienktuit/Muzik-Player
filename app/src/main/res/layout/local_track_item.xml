<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="#292929"
    android:background="@color/spot_bg"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="5dp"
    android:useDefaultMargins="true"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@color/spot_bg">

        <ImageView
            android:id="@+id/imgTrendingTrack"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/sample_daily" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imgTrendingTrack"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="2dp">

            <TextView
                android:id="@+id/tvTrendingTrackTitle"
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/graphikmedium"
                android:maxLines="2"
                android:text="Local Track 1"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:fontFamily="@font/graphikmedium"
                android:layout_below="@+id/tvTrendingTrackTitle"
                android:text="Unknown artist"
                android:textColor="#bdbdbd"
                android:textSize="12sp"/>


        </RelativeLayout>



    </RelativeLayout>

</androidx.cardview.widget.CardView>