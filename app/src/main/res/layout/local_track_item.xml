<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/spot_bg"
    android:useDefaultMargins="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#1f1f1f"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgLocalTrackArtwork"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="2dp"
            android:src="@drawable/sample_daily" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/imgLocalTrackArtwork">

            <TextView
                android:id="@+id/tvLocalTrackTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/graphikmedium"
                android:maxLines="1"
                android:text="Local Track 1"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvLocalTrackArtist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvLocalTrackTitle"
                android:layout_marginStart="6dp"
                android:fontFamily="@font/graphikmedium"
                android:maxLines="1"
                android:text="Unknown artist"
                android:textColor="#bdbdbd"
                android:textSize="12sp" />


        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>