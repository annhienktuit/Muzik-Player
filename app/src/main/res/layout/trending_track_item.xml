<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="186dp"
    android:layout_height="56dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="#292929"
    android:background="@color/spot_bg"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="2dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="186dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@color/spot_bg">

        <ImageView
            android:id="@+id/imgTrendingTrack"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/sample_daily" />

        <TextView
            android:id="@+id/tvTrendingTrackTitle"
            android:layout_width="144dp"
            android:layout_height="56dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/imgTrendingTrack"
            android:fontFamily="@font/graphikmedium"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="#1 Track"
            android:textColor="@color/white"
            android:textSize="14sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>